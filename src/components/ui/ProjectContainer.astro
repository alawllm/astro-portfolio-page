---
import ArrowLink from './icons/ArrowLink.astro'

const { name } = Astro.props
---

<div
  class="flex h-44 w-44 flex-col items-center justify-center gap-4 rounded-full border-4 border-solid border-secondary text-center text-2xl md:h-64 md:w-64"
>
  <p class="text-2xl">{name}</p>
  <ArrowLink fill="fill-black dark:fill-white hover:fill-secondary" size="40" />
</div>
