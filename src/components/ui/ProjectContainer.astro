---
import ArrowLink from './icons/ArrowLink.astro'

const { name } = Astro.props
---

<div
  class="flex flex-col my-2 mx-auto items-center w-1/2 justify-center rounded-xl border-2 border-solid  border-secondary px-8 py-4 text-center text-2xl md:flex-row text-nowrap">
  <p class="text-2xl">{name}</p>
  <ArrowLink
    fill="fill-black dark:fill-white hover:fill-secondary ml-0 md:ml-14"
    size="40"
  />
</div>

