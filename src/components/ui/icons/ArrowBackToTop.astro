<div
  class="fixed bottom-4 right-4 cursor-pointer rounded-full bg-black opacity-0 transition-opacity duration-700 dark:bg-white md:bottom-10 md:right-10 hover:bg-secondaryDark"
  id="arrow-back-to-top"
>
  <a href="#header">
    <svg
      class="fill-white dark:fill-black"
      xmlns="http://www.w3.org/2000/svg"
      height="40px"
      viewBox="0 -960 960 960"
      width="40px"
      ><path
        d="M435.93-144.17v-503.02L206.1-417.36 144.17-480 480-816.2 816.2-480l-62.3 62.64-229.83-229.83v503.02h-88.14Z"
      ></path></svg
    ></a
  >
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const scrollToTopButton = document.getElementById('arrow-back-to-top')

    function toggleScrollToTopButton() {
      if (window.scrollY > 150) {
        scrollToTopButton.classList.add('opacity-100')
        scrollToTopButton.classList.remove('opacity-0')
      } else {
        scrollToTopButton.classList.add('opacity-0')
        scrollToTopButton.classList.remove('opacity-100')
      }
    }

    window.addEventListener('scroll', toggleScrollToTopButton)
  })
</script>
