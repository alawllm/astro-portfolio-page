---
import ProjectContainer from '@components/ui/ProjectContainer.astro'
---

<section
  class="mb-20 mt-4 flex flex-row flex-wrap items-center justify-evenly px-6"
  id="projects"
>
  <div class="mb-10 w-full md:mb-4 lg:w-1/3">
    <header class="mb-2 w-full text-left md:mb-4">
      <h2 class="text-4xl font-bold md:text-5xl">
        Here&nbsp;are my&nbsp;<span class="text-secondary">projects</span>
      </h2>
    </header>
    <a
      href="#"
      class="flex w-full flex-row items-center text-xl hover:fill-secondary hover:text-secondary"
      aria-label="See my other projects"
    >
      <svg
        class="fill-black hover:fill-secondary dark:fill-white"
        xmlns="http://www.w3.org/2000/svg"
        height="16px"
        viewBox="0 -960 960 960"
        width="16px"  
        aria-hidden="true"
      >
        <path d="m321-80-71-71 329-329-329-329 71-71 400 400L321-80Z"></path>
      </svg>
      <span class="ml-2 text-left font-normal">see my other projects</span>
    </a>
  </div>
  <div class="grid w-full grid-cols-2 lg:w-2/3 sm:grid-cols-3">
    <ProjectContainer name="Banking app" />
    <ProjectContainer name="Astro site" />
    <ProjectContainer name="Tetris game" />
  </div>
</section>
