---
import ProjectContainer from '@components/ui/ProjectContainer.astro'
import Header from './ui/Header.astro'
import Section from './ui/section.astro'

const textProjects = {
  headerSmall: 'my',
  headerSmallSecondary: 'projects',
}
---

<Section id="projects" ariaLabel="projects-section">
  <div class="mb-10 w-full md:mb-4 lg:w-1/3">
    <Header
      headerSmaller={textProjects.headerSmall}
      headerSmallerSecondary={textProjects.headerSmallSecondary}
    />
    <a
      href="#"
      class="group flex w-full flex-row items-center text-xl hover:text-secondary"
      aria-label="See my other projects">
      <svg
        class="fill-black transition-all duration-300 ease-in-out group-hover:fill-secondary dark:fill-white"
        xmlns="http://www.w3.org/2000/svg"
        height="16px"
        viewBox="0 -960 960 960"
        width="16px"
        aria-hidden="true">
        <path d="m321-80-71-71 329-329-329-329 71-71 400 400L321-80Z"></path>
      </svg>
      <span
        class="ml-2 text-left font-normal transition-all duration-300 ease-in-out group-hover:text-secondary">
        see my other projects
      </span>
    </a>
  </div>
  <div class="grid w-full grid-cols-2 sm:grid-cols-3 lg:w-2/3">
    <ProjectContainer name="Banking app" />
    <ProjectContainer name="Astro site" />
    <ProjectContainer name="Tetris game" />
  </div>
</Section>
