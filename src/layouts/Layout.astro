---
import Header from '@components/Navbar.astro'
import Footer from '@components/Footer.astro'
import { SEO } from 'astro-seo'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Great, optimized description of my site. It is an example of a simple portfolio page in Astro."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="astro portfolio tailwindcss" />
    <link rel="canonical" href="https://astro-portfolio-al.netlify.app" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title="A Very Descriptive Title"
      description="A heavily optimized description full of well-researched keywords."
    />
    <!-- astrojs sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!-- google fonts  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>

  <body
    class="container mx-auto max-w-screen-lg bg-white px-4 py-2 text-lg text-black dark:bg-black dark:text-white md:py-4"
  >
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :global(html) {
        scroll-behavior: smooth;
      }
      @media (prefers-reduced-motion: reduce) {
        :global(html) {
          scroll-behavior: auto;
        }
      }

      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
