---
import Header from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import { SEO } from 'astro-seo'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Great, optimized description of my site. It is an example of a simple portfolio page in Astro."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="astro portfolio tailwindcss" />
    <link rel="canonical" href="https://astro-portfolio-al.netlify.app" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title="A Very Descriptive Title"
      description="A heavily optimized description full of well-researched keywords."
    />
    <title>{title}</title>
  </head>
  <body
    class="container mx-auto max-w-screen-xl bg-white px-10 py-4 text-black dark:bg-black dark:text-white md:px-32 md:py-8"
  >
    <Header />
    <slot />
    <Footer />
    <style>
      :global(html) {
        scroll-behavior: smooth;
      }
      @media (prefers-reduced-motion: reduce) {
        :global(html) {
          scroll-behavior: auto;
        }
      }
    </style>
  </body>
</html>
